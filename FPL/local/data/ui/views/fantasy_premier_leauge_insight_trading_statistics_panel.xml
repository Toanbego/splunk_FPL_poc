<form theme="dark">
  <label>Fantasy Premier League Insight - Trading Statistics Panel</label>
  <search id="baseSearch">
    <query>
        index=fpl sourcetype="$season_token$" $name_tokenV$ team="$team_tokenV$" $position_tokenV$ 
        selected_by_percent&gt;=0
        value_season&gt;=0
        minutes&gt;=0
        (now_cost&gt;=$lower_limit_token$ AND now_cost&lt;=$upper_limit_token$)
        total_points&gt;=0
          | dedup name, team | eval now_cost=now_cost/10
      </query>
    <earliest>-24h</earliest>
    <latest>now</latest>
    <sampleRatio>1</sampleRatio>
  </search>
  <search id="secSearch">
    <query>
        index=fpl sourcetype="$season_token$" name=* team=* positions=* total_points&gt;=0 now_cost&gt;=0 minutes&gt;=0 value_season&gt;=0 
        selected_by_percent&gt;=0
        value_season&gt;=0
        minutes&gt;=0
        (now_cost&gt;=$lower_limit_token$ AND now_cost&lt;=$upper_limit_token$)
        total_points&gt;=0
          | dedup name, team | eval now_cost=now_cost/10
      </query>
    <earliest>-24h</earliest>
    <latest>now</latest>
    <sampleRatio>1</sampleRatio>
  </search>
  <fieldset submitButton="false" autoRun="false">
    <input type="multiselect" token="name_tokenV" searchWhenChanged="true">
      <label>Player Names</label>
      <delimiter> OR </delimiter>
      <fieldForLabel>name</fieldForLabel>
      <fieldForValue>name</fieldForValue>
      <search>
        <query/>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <valuePrefix>name="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="dropdown" token="team_tokenV" searchWhenChanged="true">
      <label>Team</label>
      <fieldForLabel>team</fieldForLabel>
      <fieldForValue>team</fieldForValue>
      <search>
        <query>index="fpl" sourcetype=_json | table team | dedup team</query>
        <earliest>0</earliest>
        <latest></latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="multiselect" token="position_tokenV" searchWhenChanged="true">
      <label>Position</label>
      <choice value="*">All</choice>
      <choice value="Defender">Defender</choice>
      <choice value="Midfielder">Midfielder</choice>
      <choice value="Forwarder">Forwarder</choice>
      <choice value="Goalkeeper">Goalkeeper</choice>
      <initialValue>*</initialValue>
      <valuePrefix>positions="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
    </input>
    <input type="text" token="lower_limit_token" searchWhenChanged="true">
      <label>Min Cost</label>
      <default>0</default>
      <initialValue>0.0</initialValue>
    </input>
    <input type="text" token="upper_limit_token" searchWhenChanged="true">
      <label>Max Cost</label>
      <default>150</default>
      <initialValue>150</initialValue>
    </input>
    <input type="dropdown" token="season_token" searchWhenChanged="true">
      <label>Switch Season Data</label>
      <choice value="csv_notimestamp">Last Season</choice>
      <choice value="_json">Current Season</choice>
      <default>_json</default>
      <initialValue>_json</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>TSB, Value, Cost</title>
      <chart>
        <search base="baseSearch">
          <query>| table name, value_season, selected_by_percent, now_cost, team
          | rename name as Name, selected_by_percent as "Selected by Percent"
          | sort Name</query>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">bubble</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
    <panel>
      <title>Player Cost vs Player Fantasy Points</title>
      <chart>
        <search base="baseSearch">
          <query>| table name, total_points, now_cost
            | rename name as Name 
            | sort Name</query>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.text">Total Fantasy Points</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.text">Player Cost (millions)</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">scatter</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Current Top Team Selected by A.I.</title>
      <table>
        <search>
          <query>index="fplteam" | dedup name | table name, position, Star, total_points, value_season, now_cost | rename Star as "Star Player", position as "Position", value_season as "Value Per Million", now_cost as "Cost", name as Name |  sort - total_points | addcoltotals now_cost</query>
