    </panel>
  </row>
  <row>
    <panel>
      <title>Top Player Value vs Average Value</title>
      <chart>
        <search base="baseSearch">
          <query>| where minutes &gt;= 360
              | eventstats avg(value_season), sum(value_season)
              | table name, value_season, avg(value_season)
              | sort 30 - value_season
              | rename avg(value_season) as "AVG - ROI"</query>
        </search>
