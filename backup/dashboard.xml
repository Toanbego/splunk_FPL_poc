  <row>
    <panel>
      <title>Game Statistics</title>
      <input type="text" token="name_token_x" searchWhenChanged="true">
        <label>Player Name</label>
        <default>*</default>
        <initialValue>Search</initialValue>
      </input>
      <input type="dropdown" token="position_token_x" searchWhenChanged="true">
        <label>Position</label>
        <choice value="*">All</choice>
        <choice value="Defender">Defender</choice>
        <choice value="Midfielder">Midfielder</choice>
        <choice value="Forwarder">Forwarder</choice>
        <choice value="Goalkeeper">Goalkeeper</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <input type="dropdown" token="team_token" searchWhenChanged="true">
        <label>Team</label>
        <fieldForLabel>team_name</fieldForLabel>
        <fieldForValue>team_name</fieldForValue>
        <search>
          <query>index="fpl" sourcetype=_json | table team_names | dedup team_names</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <table>
        <search>
          <query>index="fpl" full_name="$name_token_x$*" positions=$position_token_x$ team_names="$team_token$"
| dedup full_name
| table full_name, team_names, minutes, total_points, bps, bonus, goals_scored, assists, clean_sheets, goals_conceded, penalties_missed, penalties_saved, saves, yellow_cards, red_cards
| sort -value_season
| rename full_name AS "Player", bps AS "Bonus Points", goals_scored AS "Goals Scored", goals_conceded AS "Goals Conceded", total_points AS "Total Points", assists AS "Assists", minutes AS Minutes, clean_sheets as "Clean Sheets", team_names as Team, penalties_missed as "Penalties Missed", penalties_saved as "Penalties Saved", yellow_cards as "Yellow Cards", red_cards as "Red Cards", saves as Saves, bonus as Bonus</query>
          <earliest>-48h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">false</option>
      </table>
    </panel>
    <panel>
      <title>Trading Statistics</title>
      <input type="text" token="name_tokenT" searchWhenChanged="true">
        <label>Player Name</label>
        <default>*</default>
        <initialValue>Search</initialValue>
      </input>
      <input type="multiselect" token="position_tokenT" searchWhenChanged="true">
        <label>Position</label>
        <choice value="*">All</choice>
        <choice value="Defender">Defender</choice>
        <choice value="Midfielder">Midfielder</choice>
        <choice value="Forwarder">Forwarder</choice>
        <choice value="Goalkeeper">Goalkeeper</choice>
        <initialValue>*</initialValue>
        <valuePrefix>positions="</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <delimiter> OR </delimiter>
      </input>
      <input type="dropdown" token="team_tokenT" searchWhenChanged="true">
        <label>Team</label>
        <fieldForLabel>team_names</fieldForLabel>
        <fieldForValue>team_names</fieldForValue>
        <search>
          <query>index="fpl" sourcetype=_json | table team_names | dedup team_names</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <table>
        <search>
          <query>index=fpl full_name="$name_tokenT$*" $position_tokenT$ team_names="$team_tokenT$"
| dedup full_name
| table full_name, team_names, positions, selected_by_percent, value_season, total_points, now_cost, minutes, chance_of_playing_this_round, chance_of_playing_next_round, news
| sort -value_season
| rename full_name AS "Player", selected_by_percent AS "Selcted By Percent", value_season AS "Current Value", total_points AS "Total Points", now_cost AS "Current Cost", minutes AS Minutes, position as Positions, team_names as Team, chance_of_playing_this_round as "P(playing this round)", chance_of_playing_next_round as "P(playing next round)"</query>
          <earliest>-48h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">false</option>
        <format type="number" field="P(playing next round)">
          <option name="unit">%</option>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Position and Trends</title>
      <single>
        <search>
          <query>index = fpl value_season&gt;0
| timechart span=1d avg(value_season) AS Value by positions
| sort -Value
| rename position AS Position
| trendline wma2(Defender) AS "Defender trend", wma2(Goalkeeper) AS "Goalkeeper trend", wma2(Forwarder) AS "Forwarder trend", wma2(Midfielder) AS "Midfielder trend"</query>
          <earliest>-48h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0xdc4e41","0x53a051"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">1</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">large</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
</form>