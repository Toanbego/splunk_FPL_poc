<form theme="dark">
  <label>Fantasy Premier League Insight - Trading Statistics Panel</label>
  <search id="baseSearch">
      <query>
        index=fpl $name_tokenV$ team_names="$team_tokenV$" $position_tokenV$ (now_cost&gt;=$lower_limit_token$ AND now_cost&lt;=$upper_limit_token$)
        | dedup full_name
      </query>
      <earliest>-24h</earliest>
      <latest>now</latest>
      <sampleRatio>1</sampleRatio>
  </search>
  <description>Shows the top 50 most valued players, and how often they have been selected</description>
  <fieldset submitButton="false" autoRun="true"></fieldset>
  <row>
    <panel>
      <title>Cumulative Squad Fantasy Points</title>
      <chart>
        <search>
          <query>index=fpl
          | dedup full_name, team_names
          | stats sum(now_cost) as "Total Squad Cost", sum(total_points) as "Total Fantasy Points" by team_names</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">45</option>
        <option name="charting.axisTitleX.text">Total Fantasy Squad Cost vs. Total Fantasy Points per team</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">auto</option>
        <option name="charting.axisY.scale">log</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisEnd</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">top</option>
        <option name="charting.lineWidth">2</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
    <panel>
      <title>Cumulative Team Value</title>
      <chart>
        <search>
          <query>index=fpl team_names=* minutes&gt;=80
          | dedup full_name, team_names
          | stats count(full_name) as "Number of Players", sum(value_season) as "Value per million" by team_names</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">45</option>
        <option name="charting.axisTitleX.text">Team ROI vs Number of players that have played more than 360 mins</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">auto</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">all</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.fieldColors">{"Number of Players":#FF5733,"Value per million":#1414F5}</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisEnd</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Value, Cost and Selected %</title>
      <input type="multiselect" token="name_tokenV" searchWhenChanged="true">
        <label>Player Names</label>
        <delimiter> OR </delimiter>
        <fieldForLabel>full_name</fieldForLabel>
        <fieldForValue>full_name</fieldForValue>
        <search>
          <query>index="fpl" sourcetype=_json | table full_name | dedup full_name</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <valuePrefix>full_name="</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <choice value="*">All</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <input type="multiselect" token="position_tokenV" searchWhenChanged="true">
        <label>Position</label>
        <choice value="*">All</choice>
        <choice value="Defender">Defender</choice>
        <choice value="Midfielder">Midfielder</choice>
        <choice value="Forwarder">Forwarder</choice>
        <choice value="Goalkeeper">Goalkeeper</choice>
        <initialValue>*</initialValue>
        <valuePrefix>positions="</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <delimiter> OR </delimiter>
      </input>
      <input type="dropdown" token="team_tokenV" searchWhenChanged="true">
        <label>Team</label>
        <fieldForLabel>team_names</fieldForLabel>
        <fieldForValue>team_names</fieldForValue>
        <search>
          <query>index="fpl" sourcetype=_json | table team_names | dedup team_names</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <input type="text" token="lower_limit_token" searchWhenChanged="true">
        <label>Min Cost</label>
        <default>0</default>
        <initialValue>0.0</initialValue>
      </input>
      <input type="text" token="upper_limit_token" searchWhenChanged="true">
        <label>Max Cost</label>
        <default>150</default>
        <initialValue>150</initialValue>
      </input>
      <chart>
        <search>
          <query>
          index=fpl $name_tokenV$ team_names="$team_tokenV$" $position_tokenV$ (now_cost&gt;=$lower_limit_token$ AND now_cost&lt;=$upper_limit_token$)
          | dedup full_name
           table full_name, selected_by_percent, value_season, now_cost
          | rename full_name as Name, selected_by_percent as "Selected by Percent"
          | sort -value_season</query>
        <earliest>-24h</earliest>
      <latest>now</latest>
      <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">bubble</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
    <panel>
      <title>Player Cost vs Player Fantasy Points %</title>
      <input type="multiselect" token="name_tokenV" searchWhenChanged="true">
        <label>Player Names</label>
        <delimiter> OR </delimiter>
        <fieldForLabel>full_name</fieldForLabel>
        <fieldForValue>full_name</fieldForValue>
        <search>
          <query>index="fpl" sourcetype=_json | table full_name | dedup full_name</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <valuePrefix>full_name="</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <choice value="*">All</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <input type="multiselect" token="position_tokenV" searchWhenChanged="true">
        <label>Position</label>
        <choice value="*">All</choice>
        <choice value="Defender">Defender</choice>
        <choice value="Midfielder">Midfielder</choice>
        <choice value="Forwarder">Forwarder</choice>
        <choice value="Goalkeeper">Goalkeeper</choice>
        <initialValue>*</initialValue>
        <valuePrefix>positions="</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <delimiter> OR </delimiter>
      </input>
      <input type="dropdown" token="team_tokenV" searchWhenChanged="true">
        <label>Team</label>
        <fieldForLabel>team_names</fieldForLabel>
        <fieldForValue>team_names</fieldForValue>
        <search>
          <query>index="fpl" sourcetype=_json | table team_names | dedup team_names</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <input type="text" token="lower_limit_token" searchWhenChanged="true">
        <label>Min Cost</label>
        <default>0</default>
        <initialValue>0.0</initialValue>
      </input>
      <input type="text" token="upper_limit_token" searchWhenChanged="true">
        <label>Max Cost</label>
        <default>150</default>
        <initialValue>150</initialValue>
      </input>
      <chart>
        <search>
          <query>index=fpl $name_tokenV$ team_names="$team_tokenV$" $position_tokenV$ (now_cost&gt;=$lower_limit_token$ AND now_cost&lt;=$upper_limit_token$)
            | dedup full_name
            | table full_name, now_cost, total_points
            | rename full_name as Name</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.text">Player Cost (millions)</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.text">Total Fantasy Points</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">scatter</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top Player Value vs Average Value</title>
      <chart>
        <search>
          <query>index=fpl full_name="*" team_names="*" positions="*" (now_cost&gt;=0 AND now_cost&lt;=150) minutes!=0
| dedup full_name
| eventstats avg(value_season), sum(value_season)
| table full_name, value_season, avg(value_season)
| sort 30 - value_season
| rename avg(value_season) as "AVG - ROI"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">45</option>
        <option name="charting.axisTitleX.text">Player</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.text">Points / Million</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.overlayFields">"AVG - ROI"</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisEnd</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
